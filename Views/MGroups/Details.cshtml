@model WarikakeWeb.Models.MGroupDisp

@{
    ViewData["Title"] = "グループ詳細";
}

<h1>詳細</h1>

<div>
    <h4>グループ</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.groupName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.groupName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.masterName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.masterName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.startDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.startDate)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.userList[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.userList[0].StartDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @for(int i=0; i< @Model.userList.Count; i++)
            {
                <tr>

                    <td>
                        <input type="hidden" asp-for="@Model.userList[i].Id" />
                        @Html.DisplayFor(modelItem => Model.userList[i].UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.userList[i].StartDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">編集</a> |
    <a asp-action="Index">一覧に戻る</a>
</div>
