@model WarikakeWeb.ViewModel.MMemberDisp

@{
    ViewData["Title"] = "メンバー登録";
}

<h1>登録</h1>

<h4>メンバー</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="groupName" class="control-label"></label>
                @Html.DropDownList("gid", ViewBag.Groups as SelectList, new { @class = "form-control" })
                <span asp-validation-for="gid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                @Html.DropDownList("mid", ViewBag.Users as SelectList, new { @class = "form-control" })
                <span asp-validation-for="mid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="登録" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">一覧に戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
